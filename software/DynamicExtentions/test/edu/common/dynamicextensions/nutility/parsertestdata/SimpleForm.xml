<!-- Used by unit test: ContainerParserTest.testParseSimpleContainer -->

<form>
	<view>
		<name>PersonProfile</name>         		
		<caption>Person Profile</caption>       	
		<row>
			<label>
				<name>FormHeading</name>
				<userDefinedName>Form Heading</userDefinedName>
				<heading>Fill in correct personal details for loan processing</heading>	
			</label>		
		</row>
		
		<row>
			<textField>
				<name>firstName</name>     
				<userDefinedName>First Name</userDefinedName>    		
				<caption>First Name</caption>
				<phi>true</phi>
				<mandatory>true</mandatory>  
				<width>15</width>
				<toolTip>Enter your given name as it appears on passport</toolTip>
			</textField>

			<textField>
				<name>lastName</name> 
				<userDefinedName>Last Name</userDefinedName>
				<caption>Last Name</caption>
				<phi>true</phi>
				<mandatory>true</mandatory>  
				<width>15</width>
				<toolTip>Enter your surname as it appears on passport</toolTip>              
			</textField>
		</row>

		<row>
			<datePicker>
				<name>dateOfBirth</name>
				<userDefinedName>Date Of Birth</userDefinedName>
				<caption>Date Of Birth</caption>
				<phi>true</phi>
				<mandatory>true</mandatory>
				<format>MM-dd-yyyy</format>
				<default>current_date</default>
			</datePicker>
		</row>

		<row>
			<label>
				<name>FormNote</name>
				<userDefinedName>Form Note</userDefinedName>
				<note>Information filled here may be used for marketing purpose</note>	
			</label>
		</row>
	</view>
</form>
