<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.common.dynamicextensions.domain.Concept"
        table="DYEXTN_CONCEPT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">DYEXTN_CONCEPT_SEQ</param>
            </generator>
        </id>

        <property
            name="description"
            type="string"
            update="true"
            insert="true"
            column="DESCRIPTION"
        />

        <property
            name="publicId"
            type="string"
            update="true"
            insert="true"
            column="PUBLIC_ID"
        />

        <property
            name="source"
            type="string"
            update="true"
            insert="true"
            column="SOURCE"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Concept.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass
            name="edu.common.dynamicextensions.domain.StringConceptValue"
            table="DYEXTN_STRING_CONCEPT_VALUE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="value"
            type="string"
            update="true"
            insert="true"
            column="VALUE"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.ByteArrayConceptValue"
            table="DYEXTN_BARR_CONCEPT_VALUE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.ShortConceptValue"
            table="DYEXTN_SHORT_CONCEPT_VALUE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="value"
            type="short"
            update="true"
            insert="true"
            column="VALUE"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.LongConceptValue"
            table="DYEXTN_LONG_CONCEPT_VALUE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="value"
            type="long"
            update="true"
            insert="true"
            column="VALUE"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.IntegerConceptValue"
            table="DYEXTN_INTEGER_CONCEPT_VALUE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="value"
            type="integer"
            update="true"
            insert="true"
            column="VALUE"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.DateConceptValue"
            table="DYEXTN_DATE_CONCEPT_VALUE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="value"
            type="date"
            update="true"
            insert="true"
            column="VALUE"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.FloatConceptValue"
            table="DYEXTN_FLOAT_CONCEPT_VALUE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="value"
            type="float"
            update="true"
            insert="true"
            column="VALUE"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.BooleanConceptValue"
            table="DYEXTN_BOOLEAN_CONCEPT_VALUE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="value"
            type="boolean"
            update="true"
            insert="true"
            column="VALUE"
        />

        </joined-subclass>
        <joined-subclass
            name="edu.common.dynamicextensions.domain.DoubleConceptValue"
            table="DYEXTN_DOUBLE_CONCEPT_VALUE"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="value"
            type="double"
            update="true"
            insert="true"
            column="VALUE"
        />

        </joined-subclass>

    </class>

</hibernate-mapping>
