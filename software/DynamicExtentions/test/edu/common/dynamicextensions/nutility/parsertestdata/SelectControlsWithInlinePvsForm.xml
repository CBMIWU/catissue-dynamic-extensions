<!-- Used by unit test: ContainerParserTest.testParseContainerWithSelectCtrlsAndInlinePvs -->

<form>
	<view>
		<name>PersonProfile</name>         		
		<caption>Person Profile</caption>       	

		<row>
			<radioButton>
				<name>gender</name>
				<udn>gender</udn>       		
				<caption>Gender</caption>
				<phi>true</phi>
				<mandatory>true</mandatory>
				<options> 
					<option>
						<value>Male</value>
					</option>
					<option>
						<value>Female</value>
					</option>
					<option>
						<value>Unknown</value>
					</option>
				</options>
			</radioButton>
		</row>
		
		<row>
			<checkBox>
				<name>sourcesOfIncome</name>
				<udn>sourcesOfIncome</udn>       		
				<caption>Sources of Income</caption>
				<options>
					<option>
						<value>Salary</value>
					</option>
						
					<option>
						<value>Agriculture</value>
					</option>
					<option>
						<value>Gambling</value>
					</option>
					<option>
						<value>Organized Sector Business</value>
					</option>
					<option>
						<value>Others</value>
					</option>				
				</options>
			</checkBox>
		</row>		
		
		<row>
			<booleanCheckBox>
				<name>consent</name>
				<udn>consent</udn>       		
				<caption>I agree to terms and conditions</caption>				
			</booleanCheckBox>
		</row>
	</view>
</form>
