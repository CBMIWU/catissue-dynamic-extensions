<!-- Used by unit test: ContainerParserTest.testParseContainerWithSelectCtrlsAndFilePvs -->
<form>
	<view>
		<name>PersonProfile</name>         		
		<caption>Person Profile</caption>       	

		<row>
			<label>
				<name>FormHeading</name>
				<heading>Fill in correct personal details for loan processing</heading>	
			</label>		
		</row>
		
		<row>
			<radioButton>
				<name>gender</name>
				<caption>Gender</caption>
				<phi>true</phi>
				<mandatory>true</mandatory>
				<options> 
					<option>
						<value>Male</value>
					</option>
					<option>
						<value>Female</value>
					</option>
					<option>
						<value>Unknown</value>
					</option>
				</options>
			</radioButton>
		</row>
		
		<row>
			<checkBox>
				<name>sourcesOfIncome</name>
				<caption>Sources of Income</caption>
				<options>
					<option>
						<value>Salary</value>
					</option>
						
					<option>
						<value>Agriculture</value>
					</option>
					<option>
						<value>Gambling</value>
					</option>
					<option>
						<value>Organized Sector Business</value>
					</option>
					<option>
						<value>Others</value>
					</option>				
				</options>
			</checkBox>
		</row>		
		
		<row>
			<listBox>
				<name>bankAccounts</name>
				<caption>Select banks where you have maintained savings account</caption>
				<mandatory>true</mandatory>
				<multiSelect>true</multiSelect>				
				<options>
					<optionsFile>listOfNationalisedBanks.csv</optionsFile>
				</options>
			</listBox>
		</row>		
	</view>
</form>
